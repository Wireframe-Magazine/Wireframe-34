	ldx #0
morehearts	stx htempxreg
	lda heartstable,x
	ora heartstable+1,x
	beq endhearts
updateheartslp
	lda heartstable+5,x
	bpl !1
	jsr robinhearts
!1	lda heartstable,x
	sec
	sbc scrxl
	sta heartxl	
	lda heartstable+1,x
	sbc scrxh
	sta heartxh
	lda heartstable+2,x
