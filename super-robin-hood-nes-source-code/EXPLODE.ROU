explodehearts				;routine 1
	ldy noofhparas
	lda expsizetable,y
	add heartstable+6,x	    ;size
	sta heartstable+6,x
	bcc backfromheartrou
	bcs finhearts
expsizetable defb 1,2,3,4,5,6
