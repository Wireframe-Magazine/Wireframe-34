getvalue	;value a=angle
	and #63
	tay
	lda sincostable,y
	bit htempangle
	bvc waspos
	jsr waspos
	nega
	dey
	rts
waspos	sta temp
	lda htempsize
	sta address
	ldy #8
	lda #0
	sta address+1
	sta address1
	sta address1+1
multlp	lsr temp
	bcc noadd
	add16to16 address1,address,address1
noadd	asl address
	rol address+1
	dey
	bne multlp
	lda address1+1
	rts
