


cm_nmi
	if absolutely=1
	bit cm_flags
	bmi interupt
	inc cm_frames
	bit $2002
	rti
	endif
interupt				;;;do all sending of chrs etc 1st
	pha
	txa
	pha
	tya
	pha
	lda interon
	beq dontdointerupt

	lda finishedloop
	bne !1
	jsr fadeupcolours
	jsr emptyprintbuffer
!1	jsr emptyblockbuffer


	lda x.scroll
	sta _scrollcon
	lda y.scroll
	sta _scrollcon
	lda control0
	sta _control0
	lda control1
	sta _control1

	lda finishedloop
	bne !4
	jsr sendspriteblock
!4
	jsr dointerpause

	if analyzeon=1
	jsr analyze
	endif
	jsr readkeypads

	if musicon=1
	lda #13
	sta bank.tbl+13
	jsr fx_play
	lda bankno
	jsr changebankrou1
	endif
dontdointerupt
	if musicon=1
	lda pause
	bne !1	
	lda #13
	sta bank.tbl+13
	jsr play_music
	lda bankno
	jsr changebankrou1
!1
	endif

	pla
	tay
	pla
	tax

	lda #128
	sta flyflag
	pla
	rti		;supposed exit from interupt service
;------------------------------
;-----
dointerpause
	if testpause=1	
	zvar pause1,1

	lda pause
	beq !2
	lda pad
	and #bmask
	beq !3
	lda debounce
	and #bmask
	bne !3
	lda #0
	sta pause
	lda #1
	sta pause1
	sta dontpause
	jmp !3
!2	lda pause1
	beq !3
	lda #0
	sta pause1
	sta dontpause
	lda #1
	sta pause

!3
	endif

	lda pause
	bne inpausemode
pausenoton	
	lda finishedloop
	bne !1
	inc counter
;	lda counter
;	and #3
;	bne !2
;	inc clock
!2
	jsr clearspriteblock
	jsr random
!1
inpausemode
	rts
