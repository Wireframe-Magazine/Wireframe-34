setfade	stx address
	sty address+1
	lda #3
	sta fadecounter
	ldy #0
!1	lda (address),y
	sta fadecolours,y
	iny
	cpy #32
	bne !1
	ldy #0
	jmp allblack


fadeupcolours
	lda fadecounter
	beq endfade
	ldx #&3f
	stx _vramaddr
	ldy #0
	sty _vramaddr
	cmp #0
	bmi backtoblack
	tax
	lda fademasks,x
	sta fadetemp
	lda fadecounter
	beq dofadelp
	dec fadecounter
dofadelp	lda fadecolours,y
	and fadetemp
	sta _vramdata
	iny
	cpy #32
	bne dofadelp	
endfade	rts

backtoblack
	inc fadecounter
	lda fadecounter
	cmp #255
	beq allblack1
	nega
	tax
	lda fade1masks,x
	sta fadetemp
	jmp dofadelp
allblack
	flybackvar
	ldx #&3f
	stx _vramaddr
	ldy #0
	sty _vramaddr
allblack1
	lda #&e
allblacklp	sta _vramdata
	iny
	cpy #32
	bne allblacklp
	rts

fademasks	defb 255,%00111111,%00011111,%00001111
fade1masks	defb 0,%00001111,%00011111,%00111111

